<!-- 				<user name="beta" password="2468" authorities="ROLE_UTILISATEUR, ROLE_BETA" />				 -->
<!-- 			</user-service> -->
		</authentication-provider>
	</authentication-manager>

	<jee:jndi-lookup id="dataSource" jndi-name="jdbc/corpus" />


</beans:beans>
